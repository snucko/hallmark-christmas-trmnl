{% comment %}
Hallmark Christmas Movies - Quadrant Layout (400Ã—240)
Displays 1-2 featured movies with larger poster for "Tonight's Movie" or next upcoming
{% endcomment %}

{% comment %} Fetch data from GitHub using fetch_json {% endcomment %}
{% assign schedule_data = 'https://raw.githubusercontent.com/snucko/hallmark-christmas-trmnl/main/data/movies.json' | fetch_json %}

{% assign today = "now" | date: "%Y-%m-%d" %}
{% assign upcoming_movies = schedule_data.movies | where_exp: "movie", "movie.date >= today" %}
{% assign tonight_movies = schedule_data.movies | where_exp: "movie", "movie.date == today" %}

<style>
  .plugin {
    width: 400px;
    height: 240px;
    padding: 12px;
    box-sizing: border-box;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    font-variant-numeric: oldstyle-nums;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  
  .header {
    text-align: center;
    margin-bottom: 10px;
    border-bottom: 2px solid #000;
    padding-bottom: 6px;
  }
  
  .header h1 {
    font-size: 18px;
    margin: 0;
    font-weight: 700;
    letter-spacing: -0.2px;
    line-height: 1.1;
  }
  
  .featured-movie {
    display: flex;
    gap: 12px;
    align-items: center;
  }
  
  .movie-poster {
    width: 100px;
    height: 150px;
    border: 2px solid #000;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fff;
  }
  
  .movie-poster img {
    max-width: 100%;
    max-height: 100%;
  }
  
  .movie-info {
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  .tonight-label {
    font-size: 20px;
    font-weight: 700;
    margin: 0 0 10px 0;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .movie-title {
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 10px 0;
    line-height: 1.3;
    letter-spacing: -0.2px;
  }

  .movie-time {
    font-size: 15px;
    margin: 5px 0;
    font-weight: 600;
    letter-spacing: 0.3px;
  }

  .movie-channel {
    font-size: 13px;
    margin: 4px 0;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    opacity: 0.9;
  }
  
  .premiere-badge {
    display: inline-block;
    background: #000;
    color: #fff;
    padding: 3px 8px;
    font-size: 10px;
    font-weight: bold;
    margin-top: 6px;
  }
  
  .next-movie {
    margin-top: 10px;
    padding-top: 8px;
    border-top: 1px solid #000;
  }
  
  .next-label {
    font-size: 10px;
    font-weight: bold;
    margin: 0 0 4px 0;
  }
  
  .next-info {
    font-size: 11px;
    margin: 0;
  }
</style>

<div class="plugin">
  <div class="header">
    <h1>ðŸŽ„ Hallmark Christmas ðŸŽ„</h1>
  </div>
  
  {% if tonight_movies.size > 0 %}
    {% assign featured = tonight_movies.first %}
    <div class="featured-movie">
      <div class="movie-poster">
        {% if featured.image %}
          <img src="https://raw.githubusercontent.com/snucko/hallmark-christmas-trmnl/main/{{ featured.image }}" alt="{{ featured.title }}">
        {% else %}
          <div style="font-size: 20px;">ðŸŽ¬</div>
        {% endif %}
      </div>
      <div class="movie-info">
        <p class="tonight-label">Tonight!</p>
        <h2 class="movie-title">{{ featured.title }}</h2>
        <p class="movie-time">{{ featured.time | replace: ":00", "" | replace: "20", "8 PM" | replace: "21", "9 PM" | replace: "18", "6 PM" }} ET</p>
        <p class="movie-channel">{{ featured.channel }}</p>
        {% if featured.premiere %}
          <span class="premiere-badge">PREMIERE</span>
        {% endif %}
      </div>
    </div>
    
    {% if upcoming_movies.size > 1 %}
      {% assign next = upcoming_movies[1] %}
      <div class="next-movie">
        <p class="next-label">NEXT UP:</p>
        <p class="next-info">{{ next.title }} - {{ next.date | date: "%b %d" }}</p>
      </div>
    {% endif %}
  {% else %}
    {% assign featured = upcoming_movies.first %}
    <div class="featured-movie">
      <div class="movie-poster">
      {% if featured.image %}
      <img src="https://raw.githubusercontent.com/snucko/hallmark-christmas-trmnl/main/{{ featured.image }}" alt="{{ featured.title }}">
      {% else %}
      <div style="font-size: 20px;">ðŸŽ¬</div>
      {% endif %}
      </div>
      <div class="movie-info">
        <h2 class="movie-title">{{ featured.title }}</h2>
        <p class="movie-time">{{ featured.date | date: "%a, %b %d" }}</p>
        <p class="movie-time">{{ featured.time | replace: ":00", "" | replace: "20", "8 PM" | replace: "21", "9 PM" | replace: "18", "6 PM" }} ET</p>
        <p class="movie-channel">{{ featured.channel }}</p>
        {% if featured.premiere %}
          <span class="premiere-badge">PREMIERE</span>
        {% endif %}
      </div>
    </div>
    
    {% if upcoming_movies.size > 1 %}
      {% assign next = upcoming_movies[1] %}
      <div class="next-movie">
        <p class="next-label">NEXT UP:</p>
        <p class="next-info">{{ next.title }} - {{ next.date | date: "%b %d" }}</p>
      </div>
    {% endif %}
  {% endif %}
</div>
