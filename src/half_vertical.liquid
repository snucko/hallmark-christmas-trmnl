Hallmark Christmas Movies - Half Vertical Layout (400Ã—480)
Displays 6 upcoming movies in a vertical stack
{% endcomment %}

{% comment %} Use webhook merge_variables for dynamic data {% endcomment %}
{% assign schedule_data = merge_variables %}

{% assign has_data = false %}
{% if schedule_data and schedule_data.movies and schedule_data.movies.size > 0 %}
  {% assign has_data = true %}
{% endif %}

{% unless has_data %}
  {% assign fallback_season = "2025 Countdown to Christmas" %}
  {% assign fallback_movies = "Merry Christmas, Ted Cooper!|2025-10-25|20:00|Hallmark Channel|Robert Buckley, Kimberley Sustad|merry-christmas-ted-cooper.png^Finding Mr. Christmas|2025-10-27|20:00|Hallmark Channel|Jonathan Bennett|^Christmas On Duty|2025-11-01|20:00|Hallmark Channel|Janel Parrish, Parker Young|christmas-on-duty.png^A Newport Christmas|2025-11-02|20:00|Hallmark Channel|Ginna Claire Mason|a-newport-christmas.png" | split: "^" %}
{% endunless %}

{% assign today = "now" | date: "%Y-%m-%d" %}
{% if has_data %}
  {% assign upcoming_movies = schedule_data.movies | where_exp: "movie", "movie.date >= today" %}
{% else %}
  {% assign upcoming_movies = fallback_movies %}
{% endif %}

<style>
  .plugin {
    width: 400px;
    height: 480px;
    padding: 15px;
    box-sizing: border-box;
    font-family: Arial, sans-serif;
  }
  
  .header {
    text-align: center;
    margin-bottom: 12px;
    border-bottom: 2px solid #000;
    padding-bottom: 8px;
  }
  
  .header h1 {
    font-size: 18px;
    margin: 0;
    font-weight: bold;
  }
  
  .movies-list {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  
  .movie {
    display: flex;
    gap: 8px;
    border: 1px solid #000;
    padding: 6px;
  }
  
  .movie-poster {
    width: 50px;
    height: 75px;
    border: 1px solid #000;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fff;
  }
  
  .movie-poster img {
    max-width: 100%;
    max-height: 100%;
  }
  
  .movie-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  
  .movie-title {
    font-size: 12px;
    font-weight: bold;
    margin: 0 0 4px 0;
    line-height: 1.2;
  }
  
  .movie-date {
    font-size: 10px;
    margin: 2px 0;
  }
  
  .premiere-badge {
    display: inline-block;
    background: #000;
    color: #fff;
    padding: 1px 4px;
    font-size: 8px;
    font-weight: bold;
    margin-top: 2px;
  }
</style>

<div class="plugin">
  <div class="header">
    <h1>ðŸŽ„ Hallmark<br>Christmas Movies ðŸŽ„</h1>
  </div>
  
  <div class="movies-list">
    {% if has_data %}
      {% for movie in upcoming_movies limit: 4 %}
        <div class="movie">
          <div class="movie-poster">
            {% if movie.image %}
              <img src="{{ movie.image }}" alt="{{ movie.title }}">
            {% else %}
              <div style="font-size: 10px;">ðŸŽ¬</div>
            {% endif %}
          </div>
          <div class="movie-info">
            <h2 class="movie-title">{{ movie.title | truncate: 30 }}</h2>
            <p class="movie-date">{{ movie.date | date: "%b %d" }} â€¢ {{ movie.time | replace: ":00", "" | replace: "20", "8 PM" | replace: "21", "9 PM" | replace: "18", "6 PM" }}</p>
            {% if movie.premiere %}
              <span class="premiere-badge">PREMIERE</span>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    {% else %}
      {% for movie_data in upcoming_movies limit: 4 %}
        {% assign movie_parts = movie_data | split: "|" %}
        <div class="movie">
          <div class="movie-poster">
            <div style="font-size: 10px;">ðŸŽ¬</div>
          </div>
          <div class="movie-info">
            <h2 class="movie-title">{{ movie_parts[0] | truncate: 30 }}</h2>
            <p class="movie-date">{{ movie_parts[1] | date: "%b %d" }} â€¢ {{ movie_parts[2] | replace: ":00", "" | replace: "20", "8 PM" }}</p>
            <span class="premiere-badge">PREMIERE</span>
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </div>
</div>
