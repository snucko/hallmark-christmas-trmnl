{% comment %}
Hallmark Christmas Movies - Full Layout (800Ã—480)
Displays 6 upcoming movies in a 2x3 grid with posters, titles, dates, and channel info
{% endcomment %}

{% comment %} Use webhook merge_variables for dynamic data {% endcomment %}
{% assign schedule_data = merge_variables %}

{% comment %} Hardcoded fallback for local development {% endcomment %}
{% assign has_data = false %}
{% if schedule_data and schedule_data.movies and schedule_data.movies.size > 0 %}
  {% assign has_data = true %}
{% endif %}

{% unless has_data %}
  {% assign fallback_season = "2025 Countdown to Christmas" %}
  {% assign fallback_movies = "Merry Christmas, Ted Cooper!|2025-10-25|20:00|Hallmark Channel|Robert Buckley, Kimberley Sustad|merry-christmas-ted-cooper.png^Finding Mr. Christmas|2025-10-27|20:00|Hallmark Channel|Jonathan Bennett|^Christmas On Duty|2025-11-01|20:00|Hallmark Channel|Janel Parrish, Parker Young|christmas-on-duty.png^A Newport Christmas|2025-11-02|20:00|Hallmark Channel|Ginna Claire Mason|a-newport-christmas.png^Christmas Above the Clouds|2025-11-08|20:00|Hallmark Channel|Erin Krakow, Tyler Hynes|christmas-above-the-clouds.png^A Keller Christmas Vacation|2025-11-09|20:00|Hallmark Channel|Jonathan Bennett|" | split: "^" %}
{% endunless %}

{% assign today = "now" | date: "%Y-%m-%d" %}
{% if has_data %}
  {% assign upcoming_movies = schedule_data.movies | where_exp: "movie", "movie.date >= today" %}
{% else %}
  {% assign upcoming_movies = fallback_movies %}
{% endif %}

<style>
  .plugin {
    width: 800px;
    height: 480px;
    padding: 20px;
    box-sizing: border-box;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    font-variant-numeric: oldstyle-nums;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  
  .header {
    text-align: center;
    margin-bottom: 15px;
    border-bottom: 3px solid #000;
    padding-bottom: 10px;
  }
  
  .header h1 {
    font-size: 32px;
    margin: 0 0 8px 0;
    font-weight: 700;
    letter-spacing: -0.5px;
    line-height: 1.1;
  }

  .header .season {
    font-size: 16px;
    margin: 0;
    font-weight: 500;
    opacity: 0.9;
  }
  
  .movies-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-gap: 15px;
  }
  
  .movie {
    display: flex;
    gap: 10px;
    border: 2px solid #000;
    padding: 8px;
  }
  
  .movie-poster {
    width: 80px;
    height: 120px;
    border: 1px solid #000;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fff;
  }
  
  .movie-poster img {
    max-width: 100%;
    max-height: 100%;
  }
  
  .movie-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  
  .movie-title {
    font-size: 16px;
    font-weight: 600;
    margin: 0 0 6px 0;
    line-height: 1.3;
    letter-spacing: -0.2px;
  }

  .movie-date {
    font-size: 13px;
    margin: 3px 0;
    font-weight: 500;
  }

  .movie-channel {
    font-size: 12px;
    margin: 2px 0;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    opacity: 0.8;
  }

  .movie-stars {
    font-size: 11px;
    margin: 3px 0;
    font-style: italic;
    opacity: 0.9;
    line-height: 1.2;
  }
  
  .premiere-badge {
    display: inline-block;
    background: #000;
    color: #fff;
    padding: 2px 6px;
    font-size: 9px;
    font-weight: bold;
    margin-top: 3px;
  }
</style>

<div class="plugin">
  <div class="header">
    <h1>ðŸŽ„ Hallmark Christmas Movies ðŸŽ„</h1>
    <p class="season">{% if has_data %}{{ schedule_data.season }}{% else %}{{ fallback_season }}{% endif %}</p>
  </div>
  
  <div class="movies-grid">
    {% if has_data %}
      {% for movie in upcoming_movies limit: 4 %}
        <div class="movie">
          <div class="movie-poster">
            {% if movie.image %}
              <img src="https://raw.githubusercontent.com/snucko/hallmark-christmas-trmnl/main/{{ movie.image }}" alt="{{ movie.title }}"/>
            {% else %}
              <div style="font-size: 40px;">ðŸŽ¬</div>
            {% endif %}
          </div>
          <div class="movie-info">
            <h2 class="movie-title">{{ movie.title }}</h2>
            <p class="movie-date">ðŸ“… {{ movie.date | date: "%b %d" }} @ {{ movie.time | replace: ":00", "" | replace: "20", "8 PM" }}</p>
            <p class="movie-channel">ðŸ“º {{ movie.channel }}</p>
            {% if movie.stars %}
              <p class="movie-stars">{{ movie.stars }}</p>
            {% endif %}
            {% if movie.premiere %}
              <span class="premiere-badge">PREMIERE</span>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    {% else %}
      {% for movie_data in upcoming_movies limit: 4 %}
        {% assign movie_parts = movie_data | split: "|" %}
        <div class="movie">
          <div class="movie-poster">
            {% if movie_parts[5] %}
              <img src="https://raw.githubusercontent.com/snucko/hallmark-christmas-trmnl/main/images/1bit/{{ movie_parts[5] }}" alt="{{ movie_parts[0] }}"/>
            {% else %}
              <div style="font-size: 40px;">ðŸŽ¬</div>
            {% endif %}
          </div>
          <div class="movie-info">
            <h2 class="movie-title">{{ movie_parts[0] }}</h2>
            <p class="movie-date">ðŸ“… {{ movie_parts[1] | date: "%b %d" }} @ {{ movie_parts[2] | replace: ":00", "" | replace: "20", "8 PM" }}</p>
            <p class="movie-channel">ðŸ“º {{ movie_parts[3] }}</p>
            <p class="movie-stars">{{ movie_parts[4] }}</p>
            <span class="premiere-badge">PREMIERE</span>
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </div>
</div>
